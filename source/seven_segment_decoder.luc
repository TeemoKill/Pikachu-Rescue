module seven_segment_decoder (
    input value[4],
    output segs[7]
  ) {

  always {
    case (value) {
      0: segs = 7b1111110;
      1: segs = 7b1001000;
      2: segs = 7b0111101;
      3: segs = 7b1101101;
      4: segs = 7b1001011;
      5: segs = 7b1100111;
      6: segs = 7b1110111;
      7: segs = 7b1001100;
      8: segs = 7b1111111;
      9: segs = 7b1101111;
      default: segs = 7b0000000;
    }
  }
}
